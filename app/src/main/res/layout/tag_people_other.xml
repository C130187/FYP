<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    <!-- heading: search photo -->
    <TextView
        android:id="@+id/titlePeopleOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Others"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/heading"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/closePeople2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/titlePeopleOther"
        android:layout_toRightOf="@+id/titlePeopleOther"
        android:layout_toEndOf="@+id/titlePeopleOther"/>

    <!-- search field -->
    <EditText
        android:id="@+id/searchPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlePeopleOther"
        android:hint="Search / Add New People"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

    <!-- list of people -->
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peopleList"
        android:layout_below="@+id/searchPeople"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/doneButton"/>

    <Button
        android:id="@+id/addOtherPeopleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textColor="@color/text"
        android:background="@color/button"
        android:layout_alignBottom="@+id/searchPeople"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
